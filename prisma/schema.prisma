generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model UserLeave {
  id        Int      @id @default(autoincrement())
  month     String
  day       String
  title     String   @default("Annual leave")
  meta      String   @default("All Day")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
